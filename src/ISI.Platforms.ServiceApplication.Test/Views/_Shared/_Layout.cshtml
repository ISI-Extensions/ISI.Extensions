@model ISI.Platforms.ServiceApplication.Test.Models.BaseModel
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>@Model.Title</title>
	@Html.AddStyleSheet(T4Links.wwwroot.lib.bootstrap.dist.css.bootstrap_css)
	@Html.AddStyleSheet(T4Links.wwwroot.lib.bootstrap.dist.css.bootstrap_grid_css)
	@Html.AddStyleSheet(T4Links.wwwroot.lib.bootstrap.dist.css.bootstrap_reboot_css)
	@Html.AddStyleSheet(T4Links.wwwroot.lib.bootstrap.dist.css.bootstrap_utilities_css)
	@Html.AddStyleSheet(T4Links.wwwroot.StyleSheets._Shared.theme_css)
	@Html.AddStyleSheet(T4Links.wwwroot.StyleSheets._Shared._Layout_css)
	@await RenderSectionAsync("StyleSheetIncludes", false)
</head>
<body class="d-flex flex-column min-vh-100">
	<header>
		<nav class="navbar bg-light" aria-label="@Html.GetApplicationDisplayName(), Integrated Solutoins, Inc.">
			<div class="container-fluid">
				<button class="navbar-toggler ml-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbarLight" aria-controls="offcanvasNavbarLight">
					<span class="navbar-toggler-icon"></span>
				</button>
				<a class="navbar-brand me-auto ms-2" asp-route="@Routes.Public.RouteNames.Index">@Html.GetApplicationDisplayName()</a>
				<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbarLight" aria-labelledby="offcanvasNavbarLightLabel">
					<div class="offcanvas-header">
						<h5 class="offcanvas-title" id="offcanvasNavbarLightLabel">Navigation</h5>
						<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
					</div>
					<div class="offcanvas-body">
						<ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
							@if (User?.Identity?.IsAuthenticated ?? false)
							{
							}
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted navbar fixed-bottom">
		&nbsp;&nbsp; &copy; @DateTime.UtcNow.Year - Integrated Solutions, Inc.  &nbsp;&nbsp; @Html.GetApplicationName(): @Html.GetApplicationVersion()
	</footer>
	@Html.AddJavaScript(T4Links.wwwroot.lib.jquery.dist.jquery_js)
	@Html.AddJavaScript(ISI.Extensions.AspNetCore.T4Links.JavaScripts.jQueryNamespace_js)
	@Html.AddJavaScript(T4Links.wwwroot.lib.jquery_validation.dist.jquery_validate_js)
	@Html.AddJavaScript(T4Links.wwwroot.lib.jquery_validation_unobtrusive.jquery_validate_unobtrusive_js)
	@Html.AddJavaScript(ISI.Extensions.AspNetCore.T4Links.JavaScripts.DataAnnotations.DataAnnotationValidationRules_js)
	@Html.AddJavaScript(T4Links.wwwroot.lib.bootstrap.dist.js.bootstrap_bundle_js)
	@Html.AddJavaScript(T4Links.wwwroot.JavaScripts._Shared._Layout_js)
	@await RenderSectionAsync("JavaScriptIncludes", false)
	@await RenderSectionAsync("JavaScriptContent", false)
</body>
</html>